<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_marginTop="3dp">
    <Button android:id="@+id/previousPage" android:layout_width="70dp"
	    android:layout_height="35dp"
	    android:layout_marginBottom="5dp"
	    android:background="@drawable/bluebutton"
	    android:textColor="#fff"
		android:text="@string/previous" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"></Button>
    <Button android:id="@+id/nextPage" 
		android:layout_width="70dp"
	    android:layout_height="35dp"
	    android:layout_marginBottom="5dp"
	    android:background="@drawable/bluebutton"
	    android:textColor="#fff"
	    android:text="@string/next" 
	    android:layout_alignParentTop="true" 
	    android:layout_alignParentRight="true"></Button>
    <TextView android:text="Page 1/1" android:layout_height="match_parent" android:id="@+id/pageCount" android:layout_width="wrap_content" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:layout_marginTop="8dip"></TextView>
    
</RelativeLayout>
