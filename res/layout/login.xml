<?xml version="1.0" encoding="utf-8"?>
<!-- Login form layout -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:orientation="vertical">
    
	<!-- Header -->
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="44dp" 
	    android:layout_weight="0"
	    android:orientation="horizontal">
	    
		<ImageView android:layout_width="wrap_content" android:layout_height="44dp" android:layout_weight="0" android:background="@drawable/header_logo" />
		<ImageView android:layout_width="fill_parent" android:layout_height="44dp" android:layout_weight="1" android:background="@drawable/header_gradient" />
	</LinearLayout>
	
	<!-- Login form -->
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_weight="1"
	    android:gravity="center"
	    android:background="@drawable/background_striped">
		
		<ScrollView android:layout_width="270dp" android:layout_height="wrap_content" android:padding="16dp" android:background="@drawable/background_form">
		<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical">
			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="1dp"
			    android:textColor="#666"
			    android:textSize="16dp" 
			    android:text="@string/username" />
			<EditText
			    android:id="@+id/usernameField"
			    android:layout_width="fill_parent"
			    android:layout_height="30dp"
			    android:paddingLeft="7dp"
			    android:paddingTop="0dp"
			    android:layout_marginBottom="10dp"
			    android:background="@drawable/textfield"
			    android:inputType="text"
			    android:textColor="#666"
			    android:textSize="14dp" />
			
			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="1dp"
			    android:textColor="#666"
			    android:textSize="16dp"
			    android:text="@string/password" />
			<EditText
			    android:id="@+id/passwordField"
			    android:layout_width="fill_parent"
			    android:layout_height="30dp"
			    android:paddingLeft="7dp"
			    android:paddingTop="0dp"
			    android:layout_marginBottom="10dp"
			    android:background="@drawable/textfield"
			    android:inputType="textPassword"
			    android:textColor="#666"
			    android:textSize="14dp" />
			
			<Button
			    android:id="@+id/loginButton"
			    android:layout_width="120dp"
			    android:layout_height="35dp"
			    android:layout_marginBottom="5dp"
			    android:background="@drawable/bluebutton"
			    android:textColor="#fff"
			    android:text="@string/login" />
		</LinearLayout>
		</ScrollView>
	</LinearLayout>
</LinearLayout>